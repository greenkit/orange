<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_article"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/default_pic" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_article"
        android:text="Article title"
        android:textIsSelectable="false"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/medium" />
    
    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="4dp"
        android:textIsSelectable="false"
        android:textColor="@color/darkgray"
        android:textSize="@dimen/small" 
        android:text="Article summary summary summary summary summary summary summary summary summary summary summary summary summary summary summary"
        android:maxLines="2"
        android:ellipsize="end"/>
    
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_summary"
        android:layout_marginTop="4dp"
        android:layout_marginRight="10dp"
        android:textIsSelectable="false"
        android:text="2013-9-15"
        android:textColor="@color/gray"
        android:textSize="@dimen/small" />

</RelativeLayout>
