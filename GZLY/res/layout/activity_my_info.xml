<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drakwhite"
    android:orientation="vertical"
    tools:context=".MyInfoActivity" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/head_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/head_logo"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/home_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/big"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_border_repeat"
            android:contentDescription="@string/app_name" />

        <requestFocus />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/table_bg" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/lbl_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_reach"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/field_account"
                        android:textColor="@color/slightdarkgray"
                        android:textSize="@dimen/small" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/list_nopic" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <Button
                            android:id="@+id/btn_camera"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/btn_gray"
                            android:drawableLeft="@drawable/icon_camera"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="@string/btn_camera"
                            android:textColor="@color/slightdarkgray" />

                        <Button
                            android:id="@+id/btn_photo_album"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_gray"
                            android:drawableLeft="@drawable/icon_photo_album"
                            android:drawablePadding="5dp"
                            android:gravity="center_vertical"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:text="@string/btn_photo_album"
                            android:textColor="@color/slightdarkgray" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray"
                    android:orientation="vertical" >
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_account"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/field_nickname"
                        android:textColor="@color/slightdarkgray"
                        android:textSize="@dimen/little" />

                    <EditText
                        android:id="@+id/input_nickname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/input_nickname_tip"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray"
                    android:orientation="vertical" >
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_account"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/field_realname"
                        android:textColor="@color/slightdarkgray"
                        android:textSize="@dimen/little" />

                    <EditText
                        android:id="@+id/input_realname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/input_realname_tip"
                        android:inputType="textCapCharacters"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray"
                    android:orientation="vertical" >
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icon_idcard"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/field_idcard"
                        android:textColor="@color/slightdarkgray"
                        android:textSize="@dimen/little" />

                    <EditText
                        android:id="@+id/input_idcard"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/input_idcard_tip"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray"
                    android:orientation="vertical" >
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/icon_moblie"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/field_contact_tel"
                        android:textColor="@color/slightdarkgray"
                        android:textSize="@dimen/little" />

                    <EditText
                        android:id="@+id/input_tel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:ems="10"
                        android:hint="@string/input_tel_tip"
                        android:inputType="phone"
                        android:textColor="@color/black"
                        android:textSize="@dimen/small" />
                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/lightgray"
                    android:orientation="vertical" >
                </LinearLayout>

                <TableRow
                    android:id="@+id/tableRow7"
                    android:layout_width="wrap_content"
                    android:padding="10dp" >

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_red"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/btn_save"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_gray"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/btn_cancel" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <GridView
        android:id="@+id/tab_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgray"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:listSelector="@drawable/tabbar_bg"
        android:numColumns="5"
        android:padding="0dp"
        android:verticalSpacing="0dp" >

    </GridView>

</LinearLayout>
