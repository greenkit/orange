<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fl_whole"
    android:background="@color/orange"
    android:padding="6dp" >

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="频道名字"
            android:textColor="@color/darkgray"
            android:textIsSelectable="false"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="频道jia"
            android:textColor="@color/slightdarkgray"
            android:textIsSelectable="false"
            android:textSize="@dimen/small" />

        <ImageView
            android:id="@+id/iv_article"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_has_password" />
    </RelativeLayout>

    <TextView
	     android:id="@+id/tv_add_channel"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_gravity="center_vertical"
	     android:drawableLeft="@drawable/icon_add_channel_normal"
	     android:gravity="center"
	     android:drawablePadding="10dp"
	     android:layout_margin="10dp"
	     android:text="@string/create_channel"
	     android:textColor="@color/darkgray"
	     android:textSize="18sp" />

</FrameLayout>