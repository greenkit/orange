<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drakwhite"
    android:orientation="vertical"
    tools:context=".UserCenterActivity" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/head_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/head_logo"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/home_title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/big"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/head_border_repeat"
            android:contentDescription="@string/app_name" />

        <requestFocus />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/table_bg" >

            <TextView
                android:id="@+id/row_myinfo"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableLeft="@drawable/icon_account"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/detail_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/my_info"
                android:textSize="@dimen/small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/row_myticket"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableLeft="@drawable/icon_ticket_small"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/detail_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/my_ticket"
                android:textSize="@dimen/small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/row_myhotel"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableLeft="@drawable/icon_city"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/detail_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/my_hotel"
                android:textSize="@dimen/small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/row_mycomment"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableLeft="@drawable/icon_comment"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/detail_arrow"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/my_comment"
                android:textSize="@dimen/small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/lightgray"
                android:orientation="vertical" />
    </TableLayout>
    <GridView
        android:id="@+id/tab_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgray"
        android:gravity="center"
        android:horizontalSpacing="0dp"
        android:listSelector="@drawable/tabbar_bg"
        android:numColumns="5"
        android:padding="0dp"
        android:verticalSpacing="0dp" >

    </GridView>

</LinearLayout>
